# Согласованность с Git: те же окончания строк и формат.
# Cursor/VS Code будут сохранять файлы так же, как ожидает Git.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx,mjs}]
indent_style = space
indent_size = 2

[*.{json,jsonc,json5}]
indent_style = space
indent_size = 2

[*.{scss,css}]
indent_style = space
indent_size = 2
